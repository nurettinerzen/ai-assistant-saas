# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development
# Malware scan mode: required | best_effort
# If your runtime does not have ClamAV installed (e.g. many PaaS providers), use best_effort.
MALWARE_SCAN_MODE=best_effort

# URLs (REQUIRED)
# Local: http://localhost:3000
# Production: https://telyx.ai
FRONTEND_URL=http://localhost:3000

# Backend URL (REQUIRED)
# Local: http://localhost:3001
# Production: https://api.telyx.ai
BACKEND_URL=http://localhost:3001

# CORS Allowed Origins (comma-separated, REQUIRED)
# Local: http://localhost:3000,http://localhost:3001
# Production: https://telyx.ai,https://api.telyx.ai
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/telyx_dev

# Authentication (REQUIRED)
JWT_SECRET=your-jwt-secret-here-min-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# 11Labs Conversational AI
ELEVENLABS_API_KEY=

# OpenAI (for chat widget)
OPENAI_API_KEY=

# Stripe (for international payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (generate with: node backend/scripts/setup-stripe-prices.js)
# USD Prices (default)
STRIPE_STARTER_PRICE_ID=
STRIPE_BASIC_PRICE_ID=
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# TRY Prices (Turkey)
STRIPE_STARTER_PRICE_ID_TRY=
STRIPE_BASIC_PRICE_ID_TRY=
STRIPE_PRO_PRICE_ID_TRY=

# EUR Prices (Europe)
STRIPE_STARTER_PRICE_ID_EUR=
STRIPE_BASIC_PRICE_ID_EUR=
STRIPE_PRO_PRICE_ID_EUR=

# GBP Prices (UK)
STRIPE_STARTER_PRICE_ID_GBP=
STRIPE_BASIC_PRICE_ID_GBP=
STRIPE_PRO_PRICE_ID_GBP=

# BRL Prices (Brazil)
STRIPE_STARTER_PRICE_ID_BRL=
STRIPE_BASIC_PRICE_ID_BRL=
STRIPE_PRO_PRICE_ID_BRL=

# iyzico (for Turkish payments - alternative to Stripe)
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
IYZICO_STARTER_PLAN_REF=
IYZICO_BASIC_PLAN_REF=
IYZICO_PRO_PLAN_REF=
IYZICO_ENTERPRISE_PLAN_REF=

# Resend (for email)
RESEND_API_KEY=
EMAIL_FROM=Telyx.AI <info@telyx.ai>

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Shopify Integration
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Supabase (for file storage)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# NetGSM (for SMS/SIP)
NETGSM_USERNAME=
NETGSM_PASSWORD=


# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable experimental features
CHAT_RATE_LIMITING_ENABLED=false
