# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# URLs (REQUIRED)
# Local: http://localhost:3000
# Production: https://telyx.ai
FRONTEND_URL=http://localhost:3000

# Backend URL (REQUIRED)
# Local: http://localhost:3001
# Production: https://ai-assistant-saas.onrender.com
BACKEND_URL=http://localhost:3001

# CORS Allowed Origins (comma-separated, REQUIRED)
# Local: http://localhost:3000,http://localhost:3001
# Production: https://telyx.ai,https://ai-assistant-saas.onrender.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/telyx_dev

# Authentication (REQUIRED)
JWT_SECRET=your-jwt-secret-here-min-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# THIRD-PARTY SERVICES
