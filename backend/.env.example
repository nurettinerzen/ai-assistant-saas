# ============================================================================
# TELYX BACKEND ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/telyx"
DIRECT_URL="postgresql://user:password@localhost:5432/telyx"

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-here-min-32-chars"

# ============================================================================
# VAPI AI PHONE ASSISTANT
# ============================================================================
VAPI_API_KEY="ba486a1a-ef65-41ca-99c1-75138820514f"
VAPI_PUBLIC_KEY="your-vapi-public-key"

# ============================================================================
# NETGSM (For Turkey 0850 Phone Numbers + SMS)
# ============================================================================
# Sign up at: https://www.netgsm.com.tr/
# Contact sales for API access
# Used for: Phone number provisioning AND SMS notifications
NETGSM_USERNAME="your_netgsm_username"
NETGSM_PASSWORD="your_netgsm_password"
NETGSM_API_KEY="your_netgsm_api_key"
NETGSM_MSGHEADER="TELYX"  # SMS sender header (must be registered with Netgsm)

# ============================================================================
# STRIPE PAYMENTS
# ============================================================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_BASIC="price_..."
STRIPE_PRICE_PROFESSIONAL="price_..."
STRIPE_PRICE_ENTERPRISE="price_..."

# ============================================================================
# OPENAI
# ============================================================================
OPENAI_API_KEY="sk-..."

# ============================================================================
# EMAIL SERVICE (Optional)
# ============================================================================
SENDGRID_API_KEY="SG..."
EMAIL_FROM="noreply@telyx.ai"

# ============================================================================
# TWILIO (Optional - Future)
# ============================================================================
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================================================
# GOOGLE SERVICES (Calendar, Sheets)
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
# Enable Google Calendar API and Google Sheets API
# Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/calendar/google/callback"
# Note: Alternative OAuth endpoints also available at:
# /api/integrations/google-calendar/callback (integrations route)
# /api/integrations/google-sheets/callback (sheets integration)

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"  # Used for OAuth callbacks

# ============================================================================
# WHATSAPP BUSINESS API (For notifications)
# ============================================================================
# Get credentials from: https://developers.facebook.com/apps
# Set up WhatsApp Business API
# Each business can have their own WhatsApp credentials stored in integrations table
# These are default/fallback credentials
WHATSAPP_BUSINESS_PHONE_ID="your-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-business-access-token"
